<odoo>
    <record id="view_employee_form_inherit_leave_settings" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.leave.settings</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Leave Setting">
                    <group>
                        <group>
                            <!-- <field name="rank" widget="selection" options="{'no_create': True}" attrs="{'readonly': [('user_groups', 'not in', ['dh_hr_leave.group_hr_leave_manager'])]}"/> -->
                            <field name="rank" widget="selection" options="{'no_create': True}"  groups="dh_hr_leave.group_hr_leave_manager"/>
                            <field name="allowable_days" readonly="1"/>
                        </group>
                        <group>
                            <!-- <field name="approval_manager_id" string="Review by" context="{'default_employee_id': id}" attrs="{'readonly': [('user_groups', 'not in', ['dh_hr_leave.group_hr_leave_manager'])]}"/> -->
                            <field name="approval_manager_id" string="Review by" context="{'default_employee_id': id}" groups="dh_hr_leave.group_hr_leave_manager"/>
                            <field name="approval_head_id" string="Approval By" readonly="1"/>
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
