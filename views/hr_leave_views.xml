<odoo>
    <record id="view_hr_leave_form" model="ir.ui.view">
        <field name="name">hr.leave.form</field>
        <field name="model">hr.leave</field>
        <field name="arch" type="xml">
            <form string="Leave Request">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="employee_id"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="state" readonly="1"/>
                        <field name="description"/>
                    </group>
                    <footer>
                        <button string="Confirm" type="object" name="action_confirm" states="draft"/>
                        <button string="Approve" type="object" name="action_approve" states="confirm"/>
                        <button string="Refuse" type="object" name="action_refuse" states="confirm"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hr_leave_tree" model="ir.ui.view">
        <field name="name">hr.leave.tree</field>
        <field name="model">hr.leave</field>
        <field name="arch" type="xml">
            <tree string="Leave Requests">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="action_hr_leave" model="ir.actions.act_window">
        <field name="name">Leave Requests</field>
        <field name="res_model">hr.leave</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
